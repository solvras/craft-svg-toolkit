{
    "name": "solvras/craft-svg-toolkit",
    "description": "Craft plugin Twig filters to change inline SVGs.",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "support@solvr.no"
    },
    "require": {
        "php": ">=8.0.2",
        "ext-dom": "*",
        "craftcms/cms": "^4.5.0|^5.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "solvras\\craftsvgtoolkit\\": "src/"
        }
    },
    "extra": {
        "handle": "svg-toolkit",
        "name": "SVG Toolkit",
        "developer": "Solvr",
        "documentationUrl": "",
        "class": "solvras\\craftsvgtoolkit\\SvgToolkit"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

